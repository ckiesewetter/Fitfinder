<%= form_for(activity) do |f| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :next_at %>
    <%= f.datetime_select(:next_at, ampm: true) %>
  </div>

  <div class="field">
    <%= f.label :location_id %>
    <%= f.number_field :location_id %>
  </div>

  <div class="field">
    <%= f.label :schedule %>
    <%= f.text_area :schedule %>
  </div>

  <div class="field">
    <%= f.label :requirement %>
    <%= f.text_area :requirement %>
  </div>

  <div class="field">
    <%= f.label :fitness_level %>
    <%= f.select :fitness_level, ['Beginner', 'Intermediate', 'Advanced', 'All Levels Welcome'] %>
  </div>

  <div class="field">
    <%= f.label :pricing %>
    <%= f.text_field :pricing %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
